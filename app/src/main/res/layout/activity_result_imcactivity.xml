<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultIMCActivity.ResultIMCActivity"
    android:background="@color/dark_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:text="@string/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:gravity="center"

            android:layout_marginBottom="100sp"/>

        <TextView
            android:text="@string/aswer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/answer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/slight_dark_blue"
            android:gravity="center"/>
        <TextView
            android:id="@+id/answer_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/weight_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src=""/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>